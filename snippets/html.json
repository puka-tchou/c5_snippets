{
  "New area": {
    "prefix": "c5area",
    "body": [
      "<?php",
      "\\$${1:contenu} = new Area('${2:contenu}');",
      "\\$${1:contenu}->setAreaGridMaximumColumns(12);",
      "\\$${1:contenu}->display(\\$c);",
      "?>"
    ],
    "description": "Create a new area"
  },

  "New Global area": {
    "prefix": "c5globalarea",
    "body": [
      "<?php",
      "\\$${1:contenu} = new GlobalArea('${2:contenu}');",
      "\\$${1:contenu}->setAreaGridMaximumColumns(${3:12});",
      "\\$${1:contenu}->display(\\$c);",
      "?>"
    ],
    "description": "Create a new global area"
  },

  "New translation": {
    "prefix": "c5translate",
    "body": ["<?= t('$1'); ?>$0"],
    "description": "Create a new translation"
  },

  "Get a page attribute": {
    "prefix": "c5getattribute",
    "body": ["<?= \\$c->getAttribute('$1'${2:, 'display'}); ?>$0"],
    "description": "Get a page attribute"
  },

  "Inject php value into html": {
    "prefix": "?=",
    "body": ["<?= $1;?>$0"],
    "description": "Inject php value into html"
  },

  "PHP test": {
    "prefix": "?if",
    "body": ["<?php if($1):?>", "$2", "<?php endif; ?>"],
    "description": "display html on php condition"
  },

  "Get the current locale": {
    "prefix": "c5locale",
    "body": [
      "<?= \\Concrete\\Core\\Localization\\Localization::activeLanguage(); ?>"
    ],
    "description": "Get the current locale"
  },

  "New include": {
    "prefix": "c5include",
    "body": ["<?php \\$view->inc('${1:includes/}') ?>"],
    "description": "Include a file"
  },

  "Get the theme path": {
    "prefix": "c5theme",
    "body": ["<?= \\$view->getThemePath() ?>"],
    "description": "Get the theme path"
  }
}
